<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A5EA8">

    <Button
        android:id="@+id/btnprevious"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="1.5dp"
        android:backgroundTint="@color/red"
        android:drawableLeft="@mipmap/ic_prev"
        android:text="PREV" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@+id/btnprevious"
        android:backgroundTint="@color/red"
        android:drawableRight="@mipmap/ic_next"
        android:text="NEXT" />

    <Button
        android:id="@+id/btnnew"
        android:layout_width="133dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/btnnext"
        android:backgroundTint="@color/red"
        android:drawableLeft="@mipmap/ic_new"
        android:text="NEW" />





    <TextView
        android:id="@+id/textdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/btnnew"
        android:layout_marginTop="13dp"
        android:layout_toRightOf="@id/Btnselectdate"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="20dp"
        android:hint="SELECTED DATE"
        android:textColor="@color/white" />

    <TableLayout
        android:id="@+id/tableid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:stretchColumns="1,2,3,4,5">


    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/simRecView"
        android:layout_width="match_parent"
        android:layout_height="395dp"
        android:layout_below="@+id/btnprevious"
        android:layout_marginTop="102dp"
        android:scrollbarSize="12dp"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="191dp" />

    <!-- display Main Page button -->
    <Button
        android:id="@+id/btnmain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/red"
        android:text="Main Page"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableRight="@mipmap/ic_main_page"/>

    <Button
        android:id="@+id/Btnselectdate"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:drawableRight="@drawable/ic_calander"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/red"
        android:text="Select Date"
        android:textColor="@color/white"
        android:layout_below="@id/btnprevious"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>