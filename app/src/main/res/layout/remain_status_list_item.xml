<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/parent">


    <!-- this is how to add underline LIne in recylcer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F50CFA03" />

    <TextView
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:id="@+id/txtmobchargeid"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:id="@+id/txtclientsubnumber"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txtmobchargeid"
        />

    <TextView
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:id="@+id/txtamount"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txtclientsubnumber"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_baseline_send_24"
        android:id="@+id/sendImage"
        android:background="@drawable/ic_baseline_send_24"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/txtamount"
        />


</RelativeLayout>

