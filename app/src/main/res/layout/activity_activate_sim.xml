<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Aliatnetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A5EA8"
    tools:context=".Activate_Sim">

  <!-- Button Activate via USSD -->
  <Button
      android:id="@+id/Btnsms"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_marginStart="1dp"
      android:text="Activate Via SMS"
      android:textStyle="bold"
      android:textSize="15dp"
      android:backgroundTint="@color/red"
      android:drawableRight="@mipmap/ic_activate_via_sms"
      style="@style/Widget.MaterialComponents.Button"
      />




  <!-- Button Registration via ip -->
  <Button
      android:id="@+id/Btnip"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_below="@+id/Btnsms"
      android:layout_marginStart="1dp"
      android:text="Register Via IP"
      android:textStyle="bold"
      android:textSize="15dp"
      android:drawableRight="@mipmap/ic_activate_via_ip"
      android:backgroundTint="@color/red"
      style="@style/Widget.MaterialComponents.Button"
      />
  <!-- Button activation via ip -->
  <Button
      android:id="@+id/Btnactivate"
      android:layout_width="match_parent"
      android:layout_height="80dp"
      android:layout_below="@+id/Btnip"
      android:layout_marginStart="1dp"
      android:text="Activate Via IP"
      android:textStyle="bold"
      android:textSize="15dp"
      android:visibility="gone"
      android:drawableRight="@drawable/ic_activate_switch"
      android:backgroundTint="@color/red"
      style="@style/Widget.MaterialComponents.Button"
      />



  <!-- display Exit button -->
  <Button
      android:id="@+id/BtnExit"
      android:layout_width="wrap_content"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_marginVertical="20dp"
      android:textColor="@color/white"
      android:text="Exit"
      android:textStyle="bold"
      android:textSize="15dp"
      android:backgroundTint="@color/red"
      android:layout_alignParentRight="true"
      />




</RelativeLayout>