<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:id="@+id/parent">


    <!-- this is how to add underline LIne in recylcer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F50CFA03" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="30dp"
        android:id="@+id/txtmobchargeid"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/txtclientsubnumber"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/txtmobchargeid"
        />

    <TextView
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:id="@+id/txtamount"
        android:layout_toRightOf="@+id/txtclientsubnumber"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:id="@+id/txtrechargestatus"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/txtamount"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        />




</RelativeLayout>