<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="#0A5EA8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".MainActivity"
        android:background="#0A5EA8">


        <TextView
            android:id="@+id/firstname"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:text="First Name"
            android:textSize="16dp"
            android:textColor="@color/mixte"/>

        <EditText
            android:id="@+id/efirstname"
            android:layout_toRightOf="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="First Name"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:maxLines="1"
            android:maxLength="50"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/firstname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Middle Name"
            android:textColor="@color/mixte"
            />

        <EditText
            android:id="@+id/emiddlename"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/textView2"
            android:layout_below="@+id/efirstname"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:hint="Middle Name"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:maxLines="1"
            android:maxLength="50"
            android:inputType="textPersonName" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Last Name"
            android:layout_marginTop="44dp"
            />

        <EditText
            android:id="@+id/elastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="16dp"
            android:layout_below="@id/emiddlename"
            android:hint="Last Name"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView3"
            android:maxLines="1"
            android:maxLength="50"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/textView20"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Agent Number"
            android:layout_marginTop="32dp"
            />

        <EditText
            android:id="@+id/eagentnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="5dp"
            android:layout_below="@id/elastname"
            android:hint="Agent Number"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView20"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Client ID Number"
            android:layout_marginTop="32dp"
            />

        <EditText
            android:id="@+id/eagentid"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="15dp"
            android:layout_below="@id/eagentnum"
            android:hint="Client ID Number"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView21"
            android:maxLines="1"
            android:maxLength="50"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView21"
            android:text="Client Mobile Number"
            android:textColor="@color/mixte"
            android:textSize="16dp"
            />

        <EditText
            android:id="@+id/emobilenumber"
            android:layout_below="@id/eagentid"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/yellowheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:hint="Moblie Number"
            android:maxLines="1"
            android:maxLength="9"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView4"
            android:text="Date of Birth" />

        <EditText
            android:id="@+id/edateofbirth"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/emobilenumber"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/textView5"
            android:hint="DD-MM-YYYY"
            android:textColorHint="@color/yellowheader"
            android:textColor="@color/yellow"
            android:maxLines="1"
            android:maxLength="12"
            android:inputType="textPersonName" />
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/btncalender"
            android:backgroundTint="@color/red"
            android:drawableTop="@drawable/ic_calander"
            android:layout_toRightOf="@+id/edateofbirth"
            android:layout_below="@+id/emobilenumber"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textColor="@color/mixte"
            android:textSize="16dp"

            android:text="Alternative Number"
            />

        <EditText
            android:id="@+id/ealtirnativenumber"
            android:layout_below="@id/edateofbirth"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/yellowheader"
            android:layout_toRightOf="@id/textView7"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:maxLines="1"
            android:maxLength="10"
            android:hint="Alternative Number"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/mixte"
            android:text="Email"
            />

        <EditText
            android:id="@+id/email"
            android:layout_toRightOf="@id/textView8"
            android:layout_below="@id/ealtirnativenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:maxLines="1"
            android:maxLength="60"
            android:inputType="textEmailAddress"
            />


        <TextView
            android:id="@+id/textView9"
            android:layout_below="@id/textView8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:textColor="@color/mixte"
            android:textSize="16dp"
            android:text="Physical Location" />

        <EditText
            android:id="@+id/ephysicallocation"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/textView9"
            android:hint="Your address"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:maxLines="1"
            android:maxLength="30"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_below="@id/textView9"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Postal Address"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />

        <EditText
            android:id="@+id/epostaladdress"
            android:layout_below="@+id/ephysicallocation"
            android:layout_toRightOf="@id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:hint="Postal Number"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:maxLength="30"
            android:textColorHint="@color/yellowheader"
            />

        <TextView
            android:id="@+id/textView11"
            android:layout_below="@id/textView10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Gender"
            />

        <RadioGroup
            android:id="@+id/radioGroupgender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/epostaladdress"
            android:layout_toRightOf="@+id/textView11"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/emale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MALE"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/efemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEMALE"
                android:layout_marginStart="23dp"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_below="@id/textView11"
            android:layout_width="100dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/radioGroupgender"
            android:layout_toRightOf="@+id/textView6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/eforien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOREIGN"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/ekenian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KENYAN"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />
        </RadioGroup>
        <TextView
            android:id="@+id/textView25"
            android:layout_below="@id/radioGroup"
            android:layout_width="130dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />

        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/radioGroup"
            android:layout_toRightOf="@+id/textView25"
            android:entries="@array/Simstatus" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/statusSpinner"
            android:background="#F50CFA03" />


        <TextView
            android:id="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_marginTop="60dp"
            android:text="Signature"
            android:textSize="16dp"
            android:textColor="@color/mixte"/>

        <Button
            android:id="@+id/bsigniture"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/statusSpinner"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/textView12"
            android:backgroundTint="@color/silver"
            android:text="Sign Please"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/signimgIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:layout_below="@+id/statusSpinner"
            android:layout_marginStart="10dp"
            android:layout_marginTop="53dp"
            android:layout_toRightOf="@+id/bsigniture"
            android:src="@drawable/imgbtn_foreground"
            android:visibility="gone"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/signstatus"
            android:layout_below="@+id/textView12"
            android:text="DISCARD"
            android:textColor="@color/grey"
            android:visibility="gone"/>
        <View
            android:layout_width="60dp"
            android:layout_height="0.7dp"
            android:id="@+id/line"
            android:layout_below="@+id/signstatus"
            android:background="@color/grey"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sigpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusSpinner"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/bsigniture"
            android:backgroundTint="@color/red"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="ID Front Side"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/frontstatus"
            android:layout_below="@+id/textView13"
            android:text="DISCARD"
            android:textColor="@color/grey"
            android:visibility="gone"/>
        <View
            android:layout_width="60dp"
            android:layout_height="0.7dp"
            android:id="@+id/line1"
            android:layout_below="@+id/frontstatus"
            android:background="@color/grey"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bfront"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/bsigniture"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/textView13"
            android:backgroundTint="@color/silver"
            android:text="Front Image"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/frontimgIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:layout_below="@+id/signimgIcon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="48dp"
            android:layout_toRightOf="@+id/bfront"
            android:src="@drawable/imgbtn_foreground"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/frontpath"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsigniture"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/bfront"
            android:backgroundTint="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="ID Back Side"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/backstatus"
            android:layout_below="@+id/textView14"
            android:text="DISCARD"
            android:textColor="@color/grey"
            android:visibility="gone"/>
        <View
            android:layout_width="60dp"
            android:layout_height="0.7dp"
            android:id="@+id/line2"
            android:layout_below="@+id/backstatus"
            android:background="@color/grey"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bback"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/bfront"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/textView14"
            android:backgroundTint="@color/silver"
            android:text="Back Image"
            android:textColor="@color/black"/>

        <ImageButton
            android:id="@+id/backimgIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:clickable="true"
            android:layout_below="@+id/frontimgIcon"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/bback"
            android:src="@drawable/imgbtn_foreground"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/backpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bfront"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/bback"
            android:backgroundTint="@color/red"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/bback"
            android:background="#F50CFA03" />

        <ImageButton
            android:id="@+id/timerIcon"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:layout_below="@+id/textView14"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_baseline_timer_24"
            android:visibility="gone"
            android:background="@null"/>


        <TextView
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:layout_marginStart="1dp"
            android:id="@+id/txttimer"
            android:layout_below="@id/bback"
            android:layout_toRightOf="@+id/timerIcon"
            android:textColor="@color/yellowheader"
            android:visibility="gone"
            android:textSize="26dp"/>


        <CheckBox
            android:id="@+id/chterms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttimer"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:text="I confirm that I have verified the identification documents presented for registration."
            android:textColor="@color/yellowheader"
            android:textSize="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnData"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/chterms"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="50dp"></com.google.android.material.button.MaterialButton>


        <Button
            android:id="@+id/activatesim"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/chterms"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/red"
            android:drawableRight="@mipmap/ic_activate"
            android:text="Register and Activate" />

        <Button
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:text="Save"
            android:layout_below="@id/activatesim"
            android:drawableRight="@mipmap/ic_submit"
            android:id="@+id/submitbtn"
            android:textColor="@color/white"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/red">
        </Button>

        <Button
            android:id="@+id/Btnftp"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_below="@id/activatesim"
            android:layout_toEndOf="@+id/submitbtn"
            android:backgroundTint="@color/red"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:text="Upload Images" />


        <Button
            android:id="@+id/BtnDelete"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_below="@id/activatesim"
            android:layout_toRightOf="@+id/Btnftp"
            android:backgroundTint="@color/red"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:drawableRight="@mipmap/ic_delete"
            android:text="Del" />


        <Button
            android:id="@+id/BtnMainn"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btnftp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="1dp"
            android:backgroundTint="@color/red"
            android:drawableRight="@mipmap/ic_main_page"
            android:text="Main Page" />

        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/Btnftp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/red"
            android:id="@+id/simreglistview"
            android:text="Sim Reg Listview" />
    </RelativeLayout>

</ScrollView>

