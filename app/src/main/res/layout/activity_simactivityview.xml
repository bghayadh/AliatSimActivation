<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="#0A5EA8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40dp"
        tools:context=".MainActivity"
        android:background="#0A5EA8">


        <Button
            android:id="@+id/BtnMainn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/submitbtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"

            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:drawableRight="@mipmap/ic_main_page"
            android:text="Main Page" />


        <TextView
            android:id="@+id/firstname"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginTop="17dp"
            android:text="First Name"
            android:textSize="16dp"
            android:textColor="@color/mixte"/>

        <EditText
            android:id="@+id/efirstname"
            android:layout_toRightOf="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="First Name"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/firstname"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Middle Name"
            android:textColor="@color/mixte"
 />

        <EditText
            android:id="@+id/emiddlename"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/textView2"
            android:layout_below="@+id/efirstname"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:hint="Middle Name"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:inputType="textPersonName" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Last Name"
            android:layout_marginTop="44dp"
            />

        <EditText
            android:id="@+id/elastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="16dp"
            android:layout_below="@id/emiddlename"
            android:hint="Last Name"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView3"
            android:inputType="textPersonName"
         />
        <TextView
            android:id="@+id/textView20"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Agent Number"
            android:layout_marginTop="32dp"
            />

        <EditText
            android:id="@+id/eagentnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="5dp"
            android:layout_below="@id/elastname"
            android:hint="Agent Number"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView20"
            android:inputType="textPersonName"
            />
        <TextView
            android:id="@+id/textView21"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Client ID Number"
            android:layout_marginTop="32dp"
            />

        <EditText
            android:id="@+id/eagentid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/yellowheader"
            android:layout_marginTop="15dp"
            android:layout_below="@id/eagentnum"
            android:hint="Client ID Number"
            android:textColor="@color/yellow"
            android:layout_toRightOf="@id/textView21"
            android:inputType="textPersonName"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/textView21"
            android:text="Client Mobile Number"
            android:textColor="@color/mixte"
            android:textSize="16dp"
        />

        <EditText
            android:id="@+id/emobilenumber"
            android:layout_below="@id/eagentid"
            android:layout_toRightOf="@+id/textView4"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/yellowheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:hint="Moblie Number"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/textView4"
            android:text="Date of Birth" />

        <EditText
            android:id="@+id/edateofbirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emobilenumber"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/textView5"
            android:hint="Date of Birth"
            android:textColorHint="@color/yellowheader"
            android:textColor="@color/yellow"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView7"
            android:layout_below="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:textColor="@color/mixte"
            android:textSize="16dp"
            android:text="Alternative Number"
           />

        <EditText
            android:id="@+id/ealtirnativenumber"
            android:layout_below="@id/edateofbirth"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:textColorHint="@color/yellowheader"
            android:layout_toRightOf="@id/textView7"
            android:layout_height="wrap_content"
            android:textColor="@color/yellow"
            android:hint="Alternative Number"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/mixte"
            android:text="Email"
            />

        <EditText
            android:id="@+id/email"
            android:layout_toRightOf="@id/textView8"
            android:layout_below="@id/ealtirnativenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:inputType="textEmailAddress"
             />


        <TextView
            android:id="@+id/textView9"
            android:layout_below="@id/textView8"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:textColor="@color/mixte"
            android:textSize="16dp"
            android:text="Physical Location" />

        <EditText
            android:id="@+id/ephysicallocation"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/textView9"
            android:hint="Your address"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellowheader"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView10"
            android:layout_below="@id/textView9"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Postal Address"
            android:textSize="16dp"
            android:textColor="@color/mixte"
      />

        <EditText
            android:id="@+id/epostaladdress"
            android:layout_below="@+id/ephysicallocation"
            android:layout_toRightOf="@id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/yellow"
            android:hint="Postal Number"
            android:inputType="textPersonName"
            android:textColorHint="@color/yellowheader"
           />

        <TextView
            android:id="@+id/textView11"
            android:layout_below="@id/textView10"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="Gender"
             />

        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@id/epostaladdress"
            android:layout_toRightOf="@id/textView11"
            android:layout_marginTop="15dp"
            android:textColor="@color/yellow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/entries" />

        <TextView
            android:id="@+id/textView6"
            android:layout_below="@id/textView11"
            android:layout_width="130dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Nationality"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/spinner"
            android:layout_toRightOf="@+id/textView6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/eforien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOREIGN"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/ekenian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KENYAN"
                android:textColor="@color/yellowheader"
                android:textSize="16dp" />
        </RadioGroup>
        <TextView
            android:id="@+id/textView25"
            android:layout_below="@id/radioGroup"
            android:layout_width="130dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            />

        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/radioGroup"
            android:layout_toRightOf="@+id/textView25"
            android:entries="@array/Simstatus" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
             android:layout_below="@+id/textView25"
            android:layout_marginTop="40dp"
            android:text="Signiture"
            android:textSize="16dp"
            android:textColor="@color/mixte"/>

        <Button
            android:id="@+id/bsigniture"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/statusSpinner"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/textView12"
            android:backgroundTint="@color/silver"
            android:text="Sign Please"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/sigpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statusSpinner"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/bsigniture"
            android:backgroundTint="@color/red"
            android:visibility="gone" />


        <TextView
            android:id="@+id/textView13"
            android:layout_below="@+id/textView12"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:textSize="16dp"
            android:textColor="@color/mixte"
            android:text="ID Front Side"
           />


        <Button
            android:id="@+id/bfront"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@+id/bsigniture"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/textView13"
            android:backgroundTint="@color/silver"
            android:text="Front Image"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/frontpath"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bsigniture"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/bfront"
            android:backgroundTint="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView14"
            android:layout_below="@+id/textView13"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="ID Back Side"
            android:textSize="16dp"
            android:textColor="@color/mixte"
         />

        <Button
            android:id="@+id/bback"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/bfront"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/textView14"
            android:backgroundTint="@color/silver"
            android:text="Back Image"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/activatesim"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/chterms"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/submitbtn"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"

            android:backgroundTint="@color/red"
            android:drawableRight="@mipmap/ic_activate"
            android:text="Activate" />

        <TextView
            android:id="@+id/backpath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bfront"
            android:layout_marginTop="27dp"
            android:layout_toRightOf="@+id/bback"
            android:backgroundTint="@color/red"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/chterms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bback"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/red"
            android:text="Accept Terms And Conditions (MANDATORY)"
            android:textColor="@color/yellowheader"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnData"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_below="@id/activatesim"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            android:visibility="gone"
            app:cornerRadius="50dp"></com.google.android.material.button.MaterialButton>

        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Save"
            android:layout_below="@id/chterms"
            android:drawableRight="@mipmap/ic_submit"
            android:id="@+id/submitbtn"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/red">
        </Button>
    </RelativeLayout>



</ScrollView>

