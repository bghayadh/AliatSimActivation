<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent11"
    >


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/menusgrey" />


    <TextView
        android:id="@+id/sim_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="TextView"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/rownb"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:text="TextView"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/name_id"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_toEndOf="@id/rownb"
        android:gravity="left"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/mobile_id"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:layout_toEndOf="@id/name_id"
        android:gravity="left"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/simstatus_id"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:nextFocusRight="@id/mobile_id"
        android:layout_alignParentRight="true"
        android:gravity="left"
        android:padding="5dp"
        android:text="TextView"
        android:textColor="@color/black" />


</RelativeLayout>

