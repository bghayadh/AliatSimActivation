<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A5EA8"
    android:id="@+id/mobilechargeInfo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textmobilechargeid"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Mobile_Charge_ID"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/txtmobilechargeid"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="TextView"
        android:layout_marginStart="2dp"
        android:layout_toRightOf="@+id/textmobilechargeid"
        android:textColor="@color/yellow"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="139dp" />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/tabBar"
        android:background="@color/silver"
        android:layout_below="@+id/txtmobilechargeid"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="363dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabClientRecharge"
            android:text="ClientRecharge" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabClientStatus"
            android:text="ClientStatus" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tabMobileTest"
            android:text="MobileTest" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager"
        android:layout_below="@+id/tabBar"
        />



</RelativeLayout>