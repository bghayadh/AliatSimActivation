<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Aliatnetwork"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.aliatsimactivation.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background ="#00aaca">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_marginStart="142dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:text="Statistical Summary" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="370dp"
            android:id="@+id/menubutton"
            android:background="@null"
            android:src="@drawable/ic_baseline_menu_24"/>

    </RelativeLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">
        <TableRow android:background="#00aaca">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Total" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Success" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Failed" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="5dp"
                android:text="Pending" />
        </TableRow>
        <TableRow android:background="#00aaca">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Today" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/today_total"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/today_success"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/today_failed"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/today_progress"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow android:background="#00aaca">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Week" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/week_total"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/week_success"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/week_failed"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/week_progress"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow android:background="#00aaca">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:padding="5dp"
                android:text="Month" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/month_total"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/month_success"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/month_failed"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:id="@+id/month_progress"
                android:text=""
                android:textColor="@color/white"
                android:padding="5dp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/Btnsimreg"
        android:layout_width="192dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:text="SIM REGISTRATION"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="162dp"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_sim1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />


    <Button
        android:id="@+id/Btnmobcharge"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_marginStart="13dp"
        android:layout_toRightOf="@+id/Btnsimreg"
        android:text="MOBILE CHARGE"
        android:textSize="15dp"
        android:layout_marginTop="162dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_dollar1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />


    <Button
        android:id="@+id/Btnsimreport"
        android:layout_width="192dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/Btnsimreg"
        android:text="Report"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_report1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />

    <Button
        android:id="@+id/Btnsimswap"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/Btnmobcharge"
        android:layout_toRightOf="@+id/Btnsimreport"
        android:text="SIM SWAP"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_swap1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />


    <Button
        android:id="@+id/Btnsubscription"
        android:layout_width="192dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_below="@+id/Btnsimreport"
        android:text="SUBSCRIPTION"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_sub1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />

    <Button
        android:id="@+id/Btnsimstatus"
        android:layout_width="190dp"
        android:layout_height="140dp"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/Btnsimswap"
        android:layout_toRightOf="@+id/Btnsubscription"
        android:text="CHECK SIM STATUS"
        android:textSize="15dp"
        android:textAlignment="center"
        android:paddingTop="15dp"
        android:drawableTop="@drawable/ic_status1"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        style="@style/Widget.MaterialComponents.Button"
        />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="191dp"
        android:layout_height="55dp"
        android:text="Login"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        android:layout_marginBottom="22dp"
        android:drawableRight="@drawable/ic_key1"
        />


    <Button
        android:id="@+id/BtnExit"
        android:layout_width="190dp"
        android:layout_height="55dp"
        android:text="Exit"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="214dp"
        android:backgroundTint="@color/menusgrey"
        android:textColor="@color/black"
        android:layout_marginBottom="22dp"
        android:drawableRight="@drawable/ic_door1"
        />

</RelativeLayout>